<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <uses-feature android:name="android.hardware.usb.host" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/logowcorpred"
        android:roundIcon="@mipmap/logowcorpred"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">
        <activity
            android:name=".Atividades.Pedido.PagamentoPedidoActivity"
            android:exported="false" />

        <service
            android:name=".Service.Material.BuscarMaterialCategoriaService"
            android:enabled="true"
            android:exported="true" />

        <activity
            android:name=".Atividades.Pedido.PesquisarPedidosActivity"
            android:exported="false" />
        <activity
            android:name=".Atividades.Cliente.ProcurarClienteActivity"
            android:exported="false" />
        <activity
            android:name=".Atividades.Impressora.Impressora"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Atividades.Material.MaterialInformacaoActivity"
            android:exported="false" />
        <activity
            android:name=".Atividades.Material.MaterialActivity"
            android:exported="false" />
        <activity
            android:name=".Atividades.Categoria.CategoriaActivity"
            android:exported="true" />
        <activity
            android:name=".Atividades.Categoria.SubCategoriaActivity"
            android:exported="true" />

        <service
            android:name=".Service.Usuario.UsuarioService"
            android:enabled="true"
            android:exported="true" />
    </application>

</manifest>