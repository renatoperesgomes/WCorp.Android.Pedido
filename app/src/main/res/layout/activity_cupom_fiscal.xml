<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".Atividades.CupomFiscal.CupomFiscalActivity"
    android:layout_gravity="center"
    android:padding="20dp"
    android:orientation="vertical"
    >

  <TextView
      android:id="@+id/textCupomFiscal"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Cupom Fiscal"
      android:textSize="45dp"
      android:layout_gravity="center_horizontal"/>

  <EditText
      android:id="@+id/edtCpfCnpj"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:ems="10"
      android:inputType="number"
      android:hint="CPF/CNPJ"
      android:gravity="center"/>

  <RadioGroup
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:layout_gravity="center_horizontal">

    <RadioButton
        android:id="@+id/rdbCpf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:text="CPF"
        />

    <RadioButton
        android:id="@+id/rdbCnpj"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:text="CNPJ" />
  </RadioGroup>

  <Button
      android:id="@+id/btnEmitirCupom"
      android:layout_width="200dp"
      android:layout_height="wrap_content"
      android:layout_marginTop="20dp"
      android:text="Confirmar"
      android:layout_gravity="center" />
  <Button
      style="@style/BOTAOVOLTAR"
      android:id="@+id/btnVoltar"
      android:layout_width="200dp"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:layout_marginTop="5dp"
      android:text="@string/voltar"
      />
</LinearLayout>